<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Corrigido: Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Corrigido: Caminho do CSS local -->
    <link rel="stylesheet" href="/style.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    
    <title>TODOLIST NODE</title>
</head>
<body class="container">
    <div class="tarefas mt-5">
        <h3>TODOLIST NODE</h3>

        <!-- Corrigido: onsubmit + nome do campo -->
        <form class="d-flex" method="post" onsubmit="return validarFormulario()">
            <input type="text" class="form-control mr-2" name="task" placeholder="Digite sua tarefa" />
            <input type="submit" name="acao" class="btn btn-primary" value="Inserir" />
        </form>

        <!-- Exibindo as tarefas com EJS -->
        <% for (let i = 0; i < tasksLists.length; i++) { %>
            <p>
                <%= tasksLists[i] %> 
                | <a href="/deletar/<%= i %>" class="text-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </p>
        <% } %>
    </div>

    <script>
        function validarFormulario() {
            const tarefa = document.getElementsByName("task")[0].value;
            if (tarefa.trim() === '') {
                alert("Preencha a tarefa antes de enviar.");
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
